/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

.container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn-primary {
  background-color: #4CAF93;
  color: white;
  border-radius: 10rpx;
  border: none;
  font-size: 32rpx;
  padding: 24rpx;
}

.btn-primary:active {
  background-color: #3d9178;
}

.btn-secondary {
  background-color: #ffffff;
  color: #4CAF93;
  border: 2rpx solid #4CAF93;
  border-radius: 10rpx;
  font-size: 32rpx;
  padding: 24rpx;
}

/* 通用卡片样式 */
.card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* 通用标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.tag-primary {
  background-color: #e8f5f1;
  color: #4CAF93;
}

/* 通用文本样式 */
.text-primary {
  color: #4CAF93;
}

.text-gray {
  color: #999999;
}

.text-dark {
  color: #333333;
}
