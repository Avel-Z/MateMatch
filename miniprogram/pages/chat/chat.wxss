/* pages/chat/chat.wxss */

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 关联需求栏 */
.need-bar {
  background-color: #ffffff;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.need-bar-content {
  flex: 1;
  display: flex;
  align-items: center;
}

.need-bar-title {
  font-size: 28rpx;
  color: #333333;
  margin-right: 16rpx;
  max-width: 480rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.4;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 加载提示 */
.loading-tip {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx;
  color: #999999;
  font-size: 26rpx;
}

.loading-spinner.small {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #FF6B6B;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 12rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空聊天提示 */
.empty-chat {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 消息项 */
.message-item {
  display: flex;
  margin-bottom: 32rpx;
}

.message-item.self {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.message-content {
  max-width: 65%;
  display: flex;
  flex-direction: column;
}

.message-item.other .message-content {
  margin-left: 16rpx;
  align-items: flex-start;
}

.message-item.self .message-content {
  margin-right: 16rpx;
  align-items: flex-end;
}

.message-bubble {
  padding: 20rpx 28rpx;
  border-radius: 20rpx;
  word-break: break-all;
}

.message-item.other .message-bubble {
  background-color: #ffffff;
  border-top-left-radius: 4rpx;
}

.message-item.self .message-bubble {
  background-color: #FF6B6B;
  border-top-right-radius: 4rpx;
}

.message-text {
  font-size: 30rpx;
  line-height: 1.5;
}

.message-item.other .message-text {
  color: #333333;
}

.message-item.self .message-text {
  color: #ffffff;
}

.message-time {
  font-size: 22rpx;
  color: #999999;
  margin-top: 8rpx;
}

.message-status {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.sending-indicator {
  width: 16rpx;
  height: 16rpx;
  border: 2rpx solid #f3f3f3;
  border-top: 2rpx solid #999999;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.failed-text {
  font-size: 22rpx;
  color: #F44336;
}

.bottom-spacer {
  height: 140rpx;
}

/* 输入区域 */
.input-area {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ffffff;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.message-input {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 28rpx;
  font-size: 28rpx;
}

.send-btn {
  margin-left: 16rpx;
  background-color: #cccccc;
  color: #ffffff;
  font-size: 28rpx;
  padding: 0 32rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  border: none;
}

.send-btn.active {
  background-color: #FF6B6B;
}

.send-btn::after {
  border: none;
}
