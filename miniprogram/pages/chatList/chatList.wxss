/* pages/chatList/chatList.wxss */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #999999;
  font-size: 28rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #FF6B6B;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 48rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999999;
}

/* 会话列表 */
.conversation-list {
  background-color: #ffffff;
}

.conversation-item {
  display: flex;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.conversation-item:active {
  background-color: #f9f9f9;
}

.avatar-wrapper {
  position: relative;
  margin-right: 24rpx;
}

.conversation-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.unread-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 36rpx;
  height: 36rpx;
  background-color: #FF6B6B;
  color: #ffffff;
  font-size: 22rpx;
  border-radius: 18rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 8rpx;
}

.conversation-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.conversation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.conversation-name {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.conversation-time {
  font-size: 24rpx;
  color: #999999;
}

.conversation-preview {
  margin-bottom: 8rpx;
}

.preview-text {
  font-size: 28rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

.conversation-need {
  display: flex;
  align-items: center;
}

.tag.small {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  margin-right: 8rpx;
}

.need-title {
  font-size: 24rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
