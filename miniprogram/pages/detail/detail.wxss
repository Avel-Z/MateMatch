/* pages/detail/detail.wxss */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 180rpx;
}

/* 详情卡片 */
.detail-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.card-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.title-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.need-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  flex: 1;
  margin-right: 16rpx;
  line-height: 1.4;
}

.status-row {
  margin-top: 16rpx;
}

.tag-cancelled {
  background-color: #FFEBEE;
  color: #F44336;
}

.card-body {
  padding: 24rpx 32rpx;
}

.info-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f9f9f9;
}

.info-row:last-child {
  border-bottom: none;
}

.info-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.info-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 6rpx;
}

.info-value {
  font-size: 30rpx;
  color: #333333;
}

.info-value.link {
  color: #FF6B6B;
}

.nav-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

.tag-aa {
  background-color: #FFF8E1;
  color: #FFA000;
  padding: 6rpx 16rpx;
}

/* 描述区域 */
.description-section {
  margin-top: 24rpx;
  padding: 24rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.description-title {
  font-size: 26rpx;
  color: #999999;
  display: block;
  margin-bottom: 12rpx;
}

.description-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 发布者卡片 */
.publisher-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.publisher-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.publisher-info {
  flex: 1;
}

.publisher-name {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.publisher-tags {
  display: flex;
  flex-wrap: wrap;
}

.publish-time {
  font-size: 24rpx;
  color: #999999;
  margin-right: 12rpx;
}

.arrow-icon {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.4;
}

/* 地图预览 */
.map-preview {
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.preview-map {
  width: 100%;
  height: 320rpx;
}

.map-tip {
  text-align: center;
  padding: 16rpx;
  font-size: 24rpx;
  color: #999999;
  background-color: #f9f9f9;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.respond-input-area {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 24rpx;
}

.respond-input {
  height: 80rpx;
  font-size: 28rpx;
}

.btn-respond {
  background-color: #FF6B6B;
  color: #ffffff;
  font-size: 28rpx;
  padding: 0 48rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  border: none;
}

.btn-respond::after {
  border: none;
}

.btn-complete {
  flex: 1;
  background-color: #4CAF50;
  color: #ffffff;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  border: none;
}

.btn-complete::after {
  border: none;
}

.btn-cancel {
  flex: 1;
  background-color: #f5f5f5;
  color: #666666;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  border: none;
}

.btn-cancel::after {
  border: none;
}

/* 分享按钮 */
.share-btn {
  position: fixed;
  right: 32rpx;
  top: 32rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #ffffff;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  border: none;
}

.share-btn::after {
  border: none;
}

.share-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #FF6B6B;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
