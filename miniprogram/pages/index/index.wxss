/* pages/index/index.wxss */

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 分类筛选栏 */
.category-bar {
  background-color: #ffffff;
  padding: 16rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 100;
}

.category-scroll {
  white-space: nowrap;
  padding: 0 24rpx;
}

.category-item {
  display: inline-block;
  padding: 12rpx 28rpx;
  margin-right: 16rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666666;
  background-color: #f5f5f5;
  transition: all 0.3s;
}

.category-item.active {
  background-color: #FF6B6B;
  color: #ffffff;
}

/* 地图容器 */
.map-container {
  flex: 1;
  position: relative;
}

.map {
  width: 100%;
  height: 100%;
}

/* 刷新按钮 */
.refresh-btn {
  position: absolute;
  right: 24rpx;
  bottom: 48rpx;
  width: 88rpx;
  height: 88rpx;
  background-color: #ffffff;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  display: flex;
  justify-content: center;
  align-items: center;
}

.refresh-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 加载遮罩 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #FF6B6B;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 错误遮罩 */
.error-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.95);
  display: flex;
  justify-content: center;
  align-items: center;
}

.error-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.error-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
}

.error-text {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 32rpx;
}

/* 需求卡片弹窗 */
.need-card-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.need-card-overlay.show {
  opacity: 1;
  visibility: visible;
}

.need-card {
  width: 100%;
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.need-card-overlay.show .need-card {
  transform: translateY(0);
}

.need-card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.need-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  flex: 1;
  margin-right: 16rpx;
}

.need-card-body {
  padding: 16rpx 0;
}

.need-info-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  color: #666666;
  font-size: 28rpx;
}

.info-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.need-description {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-top: 16rpx;
  padding: 16rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.need-card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.need-publisher {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.publisher-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.publisher-name {
  font-size: 28rpx;
  color: #333333;
  margin-right: 16rpx;
}

.trust-tags {
  display: flex;
  flex-wrap: wrap;
}

.view-detail-btn {
  padding: 16rpx 32rpx !important;
  font-size: 28rpx !important;
}

/* 空状态 */
.empty-tip {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 32rpx;
}
