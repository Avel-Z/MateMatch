/* pages/post/post.wxss */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 160rpx;
}

.form-container {
  padding: 24rpx;
}

.form-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.form-section.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.form-section.row .section-title {
  margin-bottom: 0;
}

.required {
  color: #FF6B6B;
}

.input-field {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.textarea-field {
  width: 100%;
  height: 200rpx;
  padding: 20rpx 24rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

.picker-field {
  height: 80rpx;
  padding: 0 24rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-field.placeholder {
  color: #999999;
}

.picker-field.half {
  flex: 1;
}

.time-picker-group {
  display: flex;
  gap: 16rpx;
}

.time-picker-group picker {
  flex: 1;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

/* 人数计数器 */
.people-counter {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
}

.counter-btn {
  width: 64rpx;
  height: 64rpx;
  background-color: #FF6B6B;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  font-weight: 300;
}

.counter-btn.disabled {
  background-color: #cccccc;
}

.counter-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin: 0 48rpx;
  min-width: 48rpx;
  text-align: center;
}

/* 提交区域 */
.submit-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 24rpx 32rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #FF6B6B;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
}

.submit-btn.disabled {
  background-color: #cccccc;
}

.submit-btn::after {
  border: none;
}

.submit-tip {
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  margin-top: 16rpx;
}
