/* pages/profile/profile.wxss */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 32rpx;
}

/* 登录提示 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  background-color: #ffffff;
  margin-bottom: 24rpx;
}

.login-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.login-text {
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 40rpx;
}

.login-btn {
  background-color: #FF6B6B;
  color: #ffffff;
  font-size: 32rpx;
  padding: 24rpx 80rpx;
  border-radius: 48rpx;
  border: none;
}

.login-btn::after {
  border: none;
}

/* 用户信息卡片 */
.profile-card {
  background-color: #ffffff;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.profile-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.profile-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.profile-info {
  flex: 1;
}

.profile-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 12rpx;
}

.trust-tags {
  display: flex;
  flex-wrap: wrap;
}

.no-tags {
  font-size: 24rpx;
  color: #999999;
}

.edit-btn {
  padding: 16rpx;
}

.edit-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

/* 统计数据 */
.stats-row {
  display: flex;
  justify-content: space-around;
  padding-top: 24rpx;
  border-top: 1rpx solid #f5f5f5;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 600;
  color: #FF6B6B;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #999999;
}

/* 我的需求区域 */
.my-section {
  background-color: #ffffff;
  margin-bottom: 24rpx;
}

/* 标签切换 */
.tab-bar {
  display: flex;
  border-bottom: 1rpx solid #f5f5f5;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 30rpx;
  color: #666666;
  position: relative;
}

.tab-item.active {
  color: #FF6B6B;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background-color: #FF6B6B;
  border-radius: 3rpx;
}

/* 需求列表 */
.need-list {
  padding: 16rpx;
}

.need-item {
  background-color: #f9f9f9;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.need-item:last-child {
  margin-bottom: 0;
}

.need-item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.need-item-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  flex: 1;
  margin-right: 16rpx;
}

.need-item-info {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.need-item-time {
  font-size: 26rpx;
  color: #999999;
  margin-left: 16rpx;
}

.need-item-stats {
  font-size: 24rpx;
  color: #999999;
}

.empty-list {
  text-align: center;
  padding: 48rpx;
  color: #999999;
  font-size: 28rpx;
}

/* 设置菜单 */
.menu-section {
  background-color: #ffffff;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: transparent;
  text-align: left;
  line-height: 1;
}

.menu-item::after {
  border: none;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 24rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
}

.menu-arrow {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.4;
}
