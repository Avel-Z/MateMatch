/* pages/chat/chat.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
}

/* 消息列表 */
.messages-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message-item {
  margin-bottom: 30rpx;
}

/* 左侧消息（对方） */
.message-left {
  display: flex;
  align-items: flex-start;
}

.message-left .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.message-left .message-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

/* 右侧消息（自己） */
.message-right {
  display: flex;
  align-items: flex-start;
  flex-direction: row-reverse;
}

.message-right .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.message-right .message-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

/* 消息气泡 */
.message-bubble {
  max-width: 500rpx;
  padding: 20rpx 25rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
  line-height: 1.6;
  word-wrap: break-word;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.message-bubble-other {
  background: white;
  color: #333;
}

.message-bubble-self {
  background: #4CAF93;
  color: white;
}

/* 消息时间 */
.message-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 加载提示 */
.loading-tip,
.no-more-tip {
  text-align: center;
  padding: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 输入框 */
.input-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #e5e5e5;
}

.message-input {
  flex: 1;
  height: 80rpx;
  padding: 0 25rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.send-btn {
  margin-left: 20rpx;
  padding: 20rpx 40rpx;
  background: #4CAF93;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  height: 80rpx;
  line-height: 80rpx;
}

.send-btn[disabled] {
  background: #ccc;
  color: #999;
}
