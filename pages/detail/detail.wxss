/* pages/detail/detail.wxss */
.detail-card {
  margin-bottom: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.time-info {
  font-size: 24rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  line-height: 1.4;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  font-size: 28rpx;
}

.info-item .icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.info-item .label {
  color: #666;
  margin-right: 10rpx;
}

.info-item .value {
  color: #333;
  flex: 1;
}

.description-section {
  margin: 40rpx 0;
  padding: 30rpx;
  background: #f8f8f8;
  border-radius: 15rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.description-content {
  font-size: 28rpx;
  line-height: 1.8;
  color: #666;
  white-space: pre-wrap;
}

.publisher-section {
  margin: 40rpx 0;
}

.publisher-info {
  display: flex;
  align-items: center;
  padding: 25rpx;
  background: #f8f8f8;
  border-radius: 15rpx;
}

.publisher-info .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.publisher-info .info {
  flex: 1;
}

.publisher-info .name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.publisher-info .time {
  font-size: 24rpx;
}

.contact-btn {
  margin-top: 40rpx;
  width: 100%;
}

.wechat-info {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-top: 40rpx;
  background: #e8f5f1;
  border-radius: 15rpx;
  font-size: 28rpx;
}

.wechat-info .icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.wechat-info .label {
  color: #666;
  margin-right: 10rpx;
}

.wechat-info .wechat-id {
  color: #4CAF93;
  font-weight: bold;
  flex: 1;
  font-size: 32rpx;
}

.wechat-info .copy-btn {
  padding: 10rpx 30rpx;
  background: #4CAF93;
  color: white;
  border-radius: 30rpx;
  font-size: 24rpx;
  border: none;
}
