/* pages/index/index.wxss */
.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.need-list {
  height: calc(100vh - 150rpx);
}

.need-card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  padding: 30rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.need-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.type-tag {
  font-weight: 500;
}

.time-info {
  font-size: 24rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.location {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.location .icon {
  margin-right: 8rpx;
}

.description {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.cost {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  padding: 15rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
}

.cost .icon {
  margin-right: 8rpx;
}

.publisher {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.publisher .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.publisher .name {
  font-size: 28rpx;
  color: #333;
  margin-right: 15rpx;
}

.publisher .time {
  font-size: 24rpx;
  margin-left: auto;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载提示 */
.loading-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #999;
}
