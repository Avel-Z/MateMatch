/* pages/profile/profile.wxss */

/* 登录部分 */
.login-section {
  display: flex;
  flex-direction: column;
}

.welcome-card {
  text-align: center;
  padding: 60rpx 30rpx;
  margin-bottom: 30rpx;
}

.welcome-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 30rpx;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.welcome-desc {
  font-size: 28rpx;
  color: #999;
}

.form-card {
  padding: 40rpx 30rpx;
}

.form-item {
  margin-bottom: 35rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.label.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 5rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  box-sizing: border-box;
  background: #f8f8f8;
}

.hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.user-card .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 25rpx;
}

.user-card .user-info {
  flex: 1;
}

.user-card .nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-card .wechat-id {
  font-size: 24rpx;
}

.user-card .edit-btn {
  padding: 15rpx 35rpx;
  background: #4CAF93;
  color: white;
  border-radius: 30rpx;
  font-size: 28rpx;
  border: none;
}

/* 我的发布 */
.my-needs-section {
  margin-top: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  padding: 0 10rpx;
}

.need-item {
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.need-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.need-header .time {
  font-size: 24rpx;
}

.need-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.need-location {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 25rpx;
}

.need-location .icon {
  margin-right: 8rpx;
}

.actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
}

.action-btn.edit {
  background: #e8f5f1;
  color: #4CAF93;
}

.action-btn.delete {
  background: #fff1f0;
  color: #ff4d4f;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 编辑弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 600rpx;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.modal-actions button {
  flex: 1;
  padding: 24rpx;
  font-size: 32rpx;
}
