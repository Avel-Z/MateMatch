/* pages/publish/publish.wxss */
.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.form-card {
  padding: 40rpx 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.label.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 5rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  box-sizing: border-box;
  background: #f8f8f8;
}

.picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  box-sizing: border-box;
  background: #f8f8f8;
  color: #333;
}

.picker:empty::before {
  content: attr(placeholder);
  color: #999;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 25rpx;
  font-size: 28rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  box-sizing: border-box;
  background: #f8f8f8;
  line-height: 1.6;
}

.text-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.submit-btn {
  margin-top: 60rpx;
  width: 100%;
}
