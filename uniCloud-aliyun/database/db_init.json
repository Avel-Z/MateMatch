{
  "collections": [
    {
      "name": "posts",
      "description": "帖子/需求集合",
      "schema": {
        "_id": "ObjectId",
        "author_id": "ObjectId",
        "title": "String",
        "description": "String",
        "event_time": "String",
        "created_at": "Date",
        "expires_at": "Date",
        "location_text": "String",
        "location_coords": {
          "latitude": "Number",
          "longitude": "Number"
        },
        "images": ["String"],
        "fav_count": "Number",
        "is_anonymous": "Boolean",
        "show_contact": "Boolean",
        "status": "String",
        "category": "String"
      },
      "indexes": [
        {
          "keys": {
            "created_at": -1
          }
        },
        {
          "keys": {
            "expires_at": 1
          }
        },
        {
          "keys": {
            "category": 1
          }
        },
        {
          "keys": {
            "author_id": 1
          }
        }
      ]
    },
    {
      "name": "users",
      "description": "用户集合",
      "schema": {
        "_id": "ObjectId",
        "openid": "String",
        "nickname": "String",
        "avatarUrl": "String",
        "wechat_id": "String",
        "show_wechat": "Boolean",
        "created_at": "Date",
        "updated_at": "Date"
      },
      "indexes": [
        {
          "keys": {
            "openid": 1
          },
          "unique": true
        }
      ]
    },
    {
      "name": "favorites",
      "description": "收藏集合",
      "schema": {
        "_id": "ObjectId",
        "user_id": "String",
        "post_id": "String",
        "created_at": "Date"
      },
      "indexes": [
        {
          "keys": {
            "user_id": 1,
            "post_id": 1
          }
        }
      ]
    }
  ]
}
